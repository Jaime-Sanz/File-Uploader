<!DOCTYPE html>
<html lang="en">
<%- include('partials/header') %>
<body>
    <nav>
        <button id="dialogButton">Create New Folder</button>
        <dialog id="createFolderDialog">
            <button id="dialogCloseButton">X</button>
            <form action="/folders" method="POST">
                <label for="foldername">Please enter your folder name</label>
                <input type="text" name="foldername" id="foldername">
                <button type="submit">Create New Folder</button>
            </form>
        </dialog>
    </nav>
</body>
</html>

<script>
    const openDialogButton = document.getElementById('dialogButton');
    const closeDialog = document.getElementById('dialogCloseButton');
    const dialog = document.getElementById('createFolderDialog');

    openDialogButton.addEventListener('click', () => {
        dialog.showModal();
    });

    closeDialog.addEventListener('click', () => {
        dialog.close();
    });
</script>